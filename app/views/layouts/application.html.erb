<!DOCTYPE html>
<html>
  <head>
    <title>RailBoot</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash.present? %>
      <ul class="flash">
        <% flash.each do |messages|  %>
          <li><%= messages[1] %></li>
        <% end %>
      </ul>
    <% end %>
    <%= yield %>
  </body>
</html>
