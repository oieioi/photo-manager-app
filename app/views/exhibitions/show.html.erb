<div class="content">
  <div class="content__desc">
    <%= @exhibition.name %>
  </div>

  <ul class="content__list">
    <% @exhibition.photos.each do |photo| %>
    <li class="content__list-item">
      <%= image_tag photo.image.to_s, class: 'lazyload', alt: photo.id %>
    </li>
    <% end %>
  </ul>
  <div class="content__date">
     <%= I18n.l(@exhibition.created_at, format: :short) %>
  </div>
</div>
