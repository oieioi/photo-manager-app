<div class="admin-content">
  <h1 class="admin-content__title">Exhibitions</h1>
  <%= link_to 'Create new exhibition', new_admin_exhibition_path %>
  <table class="admin-content__table">
    <thead class="admin-content__thead">
      <tr class="admin-content__thead-tr">
        <th class="admin-content__thead-th">name</th>
        <th class="admin-content__thead-th">description</th>
        <th class="admin-content__thead-th">photos</th>
        <th class="admin-content__thead-th" colspan="2">Operations</th>
      </tr>
    </thead>

    <tbody class="admin-content__tbody">
      <% @exhibitions.each do |exhibition| %>
        <tr class="admin-content__tr">
          <td class="admin-content__td"><%= exhibition.name %></td>
          <td class="admin-content__td"><%= exhibition.description %></td>
          <td class="admin-content__td"><%= exhibition.photos.count %></td>
          <td class="admin-content__td"><%= link_to 'Edit', edit_admin_exhibition_path(exhibition) %></td>
          <td class="admin-content__td"><%= link_to 'Destroy', admin_exhibition_path(exhibition), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
