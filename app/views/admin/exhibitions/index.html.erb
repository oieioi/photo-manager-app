<p id="notice"><%= notice %></p>

<h1>Exhibitions</h1>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exhibitions.each do |exhibition| %>
      <tr>
        <td><%= exhibition.name %></td>
        <td><%= exhibition.description %></td>
        <td><%= link_to 'Show', admin_exhibition_path(exhibition) %></td>
        <td><%= link_to 'Edit', edit_admin_exhibition_path(exhibition) %></td>
        <td><%= link_to 'Destroy', admin_exhibition_path(exhibition), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exhibition', new_admin_exhibition_path %>
